<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="item"
            type="kz.dungeonmasters.auth.presentation.ui.bottom_items.LogInUi" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dp_16">

        <TextView
            style="@style/H5Bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Вход"
            android:textColor="@color/defaultGray" />

        <TextView
            style="@style/regular14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_24"
            android:text="Email"
            android:textColor="@color/defaultGray" />

        <EditText
            style="@style/regular14"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_marginTop="@dimen/dp_4"
            android:background="@drawable/bg_secondary_r8"
            android:hint="Введите вашу почту"
            android:paddingStart="@dimen/dp_16"
            android:paddingEnd="@dimen/dp_16"
            android:textColor="@color/defaultGray" />

        <TextView
            style="@style/regular14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_24"
            android:text="Пароль"
            android:textColor="@color/defaultGray" />

        <EditText
            style="@style/regular14"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_marginTop="@dimen/dp_4"
            android:inputType="textPassword"
            android:background="@drawable/bg_secondary_r8"
            android:hint="Введите пароль"
            android:paddingStart="@dimen/dp_16"
            android:paddingEnd="@dimen/dp_16"
            android:textColor="@color/defaultGray" />

        <com.mursaat.extendedtextview.AnimatedGradientTextView
            style="@style/gradientTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_24"
            android:layout_marginBottom="@dimen/dp_24"
            android:gravity="center"
            android:text="Забыли пароль?" />

        <include
            android:id="@+id/btn_log_in"
            layout="@layout/button_main_yellow" />
    </LinearLayout>
</layout>