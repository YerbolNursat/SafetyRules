<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="LocalTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorAccent">@color/primary</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowEnterAnimation">@anim/slide_in_up</item>
        <item name="android:windowExitAnimation">@anim/slide_in_down</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:statusBarColor" tools:ignore="NewApi">@color/gradientStart</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTransparentTheme</item>

    </style>

    <style name="AppBottomSheetDialogTransparentTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/TransparentBottomSheetDialog</item>
    </style>

    <style name="TransparentBottomSheetDialog" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_top_radius_transparent</item>
    </style>

    <style name="TabLayoutTextAppearance" parent="TextAppearance.Design.Tab" tools:ignore="ResourceCycle">
        <item name="android:fontFamily">@font/commons_medium</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>
        <item name="lineHeight">@dimen/sp_20</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <style name="DefaultTabLayout" parent="Base.Widget.Design.TabLayout">
        <item name="tabBackground">@drawable/bg_tab_layout_selector</item>
        <item name="tabGravity">fill</item>
        <item name="tabIndicatorAnimationDuration">3</item>
        <item name="tabIndicatorGravity">center</item>
        <item name="tabMode">fixed</item>
        <item name="tabSelectedTextColor">@color/black</item>
        <item name="tabTextColor">@color/gray</item>
    </style>

