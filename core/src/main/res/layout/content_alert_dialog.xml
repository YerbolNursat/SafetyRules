<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_r12"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="@dimen/dp_16">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_16"
            android:textColor="@color/black"
            android:theme="@style/ParagraphMedium"
            tools:text="Title" />

        <TextView
            android:id="@+id/sub_title"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_marginEnd="@dimen/dp_16"
            android:textColor="@color/black"
            android:theme="@style/ParagraphSmall"
            tools:text="Sub Title" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.5"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@color/divider_mobile" />

        <TextView
            android:id="@+id/btn_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:paddingStart="@dimen/dp_16"
            android:paddingTop="@dimen/dp_13"
            android:paddingEnd="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_13"
            android:textColor="@color/primary"
            android:theme="@style/ParagraphMedium"
            tools:text="Востановить пароль" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.5"
            android:background="@color/divider_mobile" />

        <TextView
            android:id="@+id/btn_secondary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:paddingStart="@dimen/dp_16"
            android:paddingTop="@dimen/dp_13"
            android:paddingEnd="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_14"
            android:textColor="@color/primary"
            android:theme="@style/Paragraph"
            tools:text="Отмена" />

    </LinearLayout>
</layout>